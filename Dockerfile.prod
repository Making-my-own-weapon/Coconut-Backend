FROM node:20-alpine

WORKDIR /app

# 패키지 설치
COPY package*.json ./
RUN npm ci --only=production

# 개발 의존성 임시 설치 (빌드용)
RUN npm install --save-dev @nestjs/cli typescript

# 소스 코드 복사
COPY . .

# 빌드
RUN npm run build

# 개발 의존성 제거
RUN npm prune --production

# 포트 노출
EXPOSE 3001

# 프로덕션 실행
CMD ["node", "dist/main.js"] 